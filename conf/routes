# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.IndexController.index()
GET     /login                      controllers.LoginController.login()
POST    /logar                      controllers.LoginController.logar()
GET     /cadastro                   controllers.CadastroController.cadastro()
GET     /agendarCarona              controllers.Application.agendarCarona()
GET     /enderecos                  controllers.Application.enderecos()
GET     /solicitacoes               controllers.Application.solicitacoes()
GET     /perfil                     controllers.PerfilController.perfil()
GET     /deslogar                   controllers.LoginController.deslogar()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
